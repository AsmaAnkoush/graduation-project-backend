<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <!--
        Added the constraints for entity Appointment.
    -->
    <changeSet id="20250403000509-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="parent_id"
                                 baseTableName="appointment"
                                 constraintName="fk_appointment__parent_id"
                                 referencedColumnNames="id"
                                 referencedTableName="parent"
                                 />

        <addForeignKeyConstraint baseColumnNames="child_id"
                                 baseTableName="appointment"
                                 constraintName="fk_appointment__child_id"
                                 referencedColumnNames="id"
                                 referencedTableName="child"
                                 />

        <addForeignKeyConstraint baseColumnNames="schedule_id"
                                 baseTableName="appointment"
                                 constraintName="fk_appointment__schedule_id"
                                 referencedColumnNames="id"
                                 referencedTableName="schedule_vaccination"
                                 />

        <addForeignKeyConstraint baseColumnNames="health_worker_id"
                                 baseTableName="appointment"
                                 constraintName="fk_appointment__health_worker_id"
                                 referencedColumnNames="id"
                                 referencedTableName="health_worker"
                                 />
    </changeSet>
</databaseChangeLog>
